@model Projeto_MVC.Models.Customers

@{
    ViewData["Title"] = "Detalhes";
}

<h1>Detalhes</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nome
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.name)
        </dd>
        <dt class = "col-sm-2">
            Profissão
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.job)
        </dd>
        <dt class = "col-sm-2">
            Idade
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.age)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Editar", "Edit", new {Model.id}) |
    <a asp-action="Index">Voltar para a tabela</a>
</div>
